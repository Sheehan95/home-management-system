<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Temperature:"
            android:id="@+id/temperatureLabel"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="96dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Sensors:"
            android:id="@+id/sensorsLabel"
            android:layout_marginTop="55dp"
            android:layout_below="@+id/tempButton"
            android:layout_alignStart="@+id/temperatureLabel" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Temp"
            android:id="@+id/tempButton"
            android:layout_marginEnd="55dp"
            android:layout_alignTop="@+id/temperatureLabel"
            android:layout_alignParentEnd="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Sensor"
            android:id="@+id/sensorButton"
            android:layout_alignTop="@+id/sensorsLabel"
            android:layout_alignStart="@+id/tempButton" />
    </RelativeLayout>
</RelativeLayout>
